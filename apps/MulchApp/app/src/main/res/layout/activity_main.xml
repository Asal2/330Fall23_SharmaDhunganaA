<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Mulch_type"
        android:layout_width="408dp"
        android:layout_height="40dp"
        android:text="Select Mulch Type"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.018"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01" />

    <RadioGroup
        android:id="@+id/Mulch_option"
        android:layout_width="405dp"
        android:layout_height="373dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="48dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/option_Premium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Premium Bark Mulch" />

        <RadioButton
            android:id="@+id/option_Special"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Special Blend" />

        <RadioButton
            android:id="@+id/option_Triple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Triple Ground" />

        <RadioButton
            android:id="@+id/option_Chocolate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chocolate Dyed" />

        <RadioButton
            android:id="@+id/option_Red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Red Dyed" />

        <RadioButton
            android:id="@+id/option_Black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Black Dyed" />

        <RadioButton
            android:id="@+id/option_Play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Play Mat" />

        <RadioButton
            android:id="@+id/option_Cedar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cedar" />

    </RadioGroup>

    <Button
        android:id="@+id/supabutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="304dp"
        android:text="Next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Mulch_option" />

</androidx.constraintlayout.widget.ConstraintLayout>